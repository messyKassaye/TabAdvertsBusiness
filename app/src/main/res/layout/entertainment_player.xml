<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".player.players.EntertainmentPlayer">

    <SurfaceView
        android:id="@+id/playerSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/closeMedia"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Close"
        android:background="@drawable/transparent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/mediaController"
        android:visibility="gone"
        android:background="#99000000"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/closePlayer"
                android:layout_marginRight="20dp"
                android:text="Close"
                android:textAllCaps="false"
                android:background="@drawable/button_shape"
                android:textColor="@android:color/white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageButton
                android:id="@+id/playButton"
                android:layout_marginRight="20dp"
                android:background="@drawable/transparent_button"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/hideController"
                android:background="@drawable/tranparent_button"
                android:text="Hide"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>