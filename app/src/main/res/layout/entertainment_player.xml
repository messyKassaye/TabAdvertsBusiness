<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".player.players.EntertainmentPlayer">

    <SurfaceView
        android:id="@+id/playerSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/closeMedia"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Close"
        android:background="@drawable/transparent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/addStarterView"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:background="#99000000"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adStartText"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:text="Ad will start after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/addCounterButton"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_button"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>